<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginBottom="15dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="4dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/estrella"
                android:layout_width="61dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/estrella" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgDestino"
                    android:layout_width="234dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    card_view:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

                <TextView
                    android:id="@+id/txtTituloDestino"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"

                    android:background="#8c111122"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="TextView"
                    android:textColor="#ffe3e3e3"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>